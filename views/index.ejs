<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
</head>

<body>

    <div class="container my-0">

        <div class="container my-1">
            <div class="jumbotron" style="background-color: cadetblue;">
                <h2>Bienvenido <%= datos.nombre %>
                </h2>
                <h3>Direccion: <%= datos.correo %>
                </h3>
                <button class="btn btn-danger my-2" onclick="location.href='/logout'">LOGOUT</button>
            </div>
        </div>

        <div class="jumbotron">

            <h1 style="color: blue">Ingrese datos</h1>
            <br />

            <!-- Formulario para el ingreso de productos -->

            <form id="formularioProductos">
                <div class="form-group">
                    <label for="nombre"><b>Nombre</b></label>
                    <input id="nombre" class="form-control" type="text" name="nombre" />
                </div>

                <div class="form-group">
                    <label for="descripcion"><b>Descripcion</b></label>
                    <input id="descripcion" class="form-control" type="text" name="descripcion" />
                </div>

                <div class="form-group">
                    <label for="precio"><b>Precio</b></label>
                    <input id="precio" class="form-control" type="number" name="precio" />
                </div>

                <div class="form-group">
                    <label for="imagen"><b>Imagen</b></label>
                    <input id="imagen" class="form-control" name="imagen" />
                </div>

                <button id="enviar" type="submit" class="btn btn-success mt-3 mb-5">
                    Enviar
                </button>

                <button id="test" type="submit" class="btn btn-success mt-3 mb-5">
                    Testear
                </button>

            </form>

            <% if(productos.length> 0){ %>
                <div class="table-responsive">
                    <table class="table table-dark">
                        <tr style="color: yellow">
                            <th>Productos</th>
                            <th>Descripcion</th>
                            <th>Precio</th>
                            <th>Imagen</th>
                        </tr>
                        <% for (const producto of productos) {%>
                            <tr>
                                <td>
                                    <%=producto.nombre%>
                                </td>
                                <td>
                                    <%=producto.descripcion%>
                                </td>
                                <td>
                                    <%=producto.precio%>
                                </td>
                                <td>
                                    <%=producto.imagen%>
                                </td>
                            </tr>
                            <%};%>
                    </table>
                </div>
                <% } else{ %>
                    <h3 class="alert alert-danger">No se encontraron productos</h3>
                    <% } %>

                        <!-- Chat -->

                        <h1>Chat</h1>

                        <!-- Formulario de Chat -->

                        <form id="formularioMensajes" class="form-inline" autocomplete="off">
                            <input type="text" id="autor" class="form-control my-2 mr-2" placeholder="Tu Nombre" />
                            <input type="text" id="mensaje" class="form-control my-2 mr-2"
                                placeholder="CuÃ©ntanos algo..." />
                            <input class="btn btn-primary my-2" type="submit" value="Enviar!" />
                        </form>

                        <hr />

                        <!-- Zona de mensajeria -->

                        <div id="mensajes"></div>

        </div>

</body>

</html>